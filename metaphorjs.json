{
    "version": "0.1.12",
    "description": "MetaphorJs Record/Store/Model",

    "push": [
        "github"
    ],
    "mixin": {
        "model": {
            "files": [
                [
                    "src/Model.js",
                    {
                        "as": "Model"
                    }
                ],
                [
                    "src/Record.js",
                    {
                        "as": "Record"
                    }
                ],
                [
                    "src/Store.js",
                    {
                        "as": "Store"
                    }
                ]
            ]
        },
        "all": {
            "files": [
                "model",
                "src/**"
            ],
            "omit": [
                "src/amd/**"
            ]
        }
    },
    "build": {
        "standalone": {
            "wrap": true,
            "global": true,
            "target": "dist/metaphorjs.model.js",
            "files": [
                "../metaphorjs/src/MetaphorJs.js",
                "model"
            ],
            "expose": [
                "Model",
                "Record",
                "Store"
            ]
        },
        "npm": {
            "target": "dist/metaphorjs.model.npm.js",
            "compile": false,
            "wrap": {
                "exported": true,
                "deferred": true,
                "args": ["window"]
            },
            "files": [
                "model"
            ],
            "omit": [
                "../metaphorjs-ajax/src/metaphorjs.ajax.js",
                "../metaphorjs-promise/src/metaphorjs.promise.js",
                "../metaphorjs-observable/src/metaphorjs.observable.js",
                "../metaphorjs-select/src/metaphorjs.select.js",
                "../metaphorjs-namespace/src/metaphorjs.namespace.js",
                "../metaphorjs-class/src/metaphorjs.class.js"
            ],
            "returns": "MetaphorJs",
            "require": {
                "metaphorjs-ajax": {
                    "as": "ajax",
                    "args": ["window"]
                },
                "metaphorjs-promise": "Promise",
                "metaphorjs-namespace": "Namespace",
                "metaphorjs-class": "Class"
            }
        },
        "amd": {
            "target": "dist/metaphorjs.model.amd.js",
            "files": [
                "model"
            ],
            "omit": [
                "../metaphorjs-ajax/src/metaphorjs.ajax.js",
                "../metaphorjs-promise/src/metaphorjs.promise.js",
                "../metaphorjs-observable/src/metaphorjs.observable.js",
                "../metaphorjs-select/src/metaphorjs.select.js",
                "../metaphorjs-namespace/src/metaphorjs.namespace.js",
                "../metaphorjs-class/src/metaphorjs.class.js",
                "../metaphorjs-class/src/func/defineClass.js",
                "../metaphorjs-class/src/func/isInstanceOf.js",
                "../metaphorjs-class/src/func/factory.js"
            ],
            "prepend": [
                "src/amd/prepend.js"
            ],
            "define": {
                "name": "metaphorjs-model",
                "return": "MetaphorJs",
                "deps": {
                    "metaphorjs-ajax": "ajax",
                    "metaphorjs-promise": "Promise",
                    "metaphorjs-namespace": "Namespace",
                    "metaphorjs-class": "Class",
                    "metaphorjs": "MetaphorJs"
                }
            }
        }
    }
}